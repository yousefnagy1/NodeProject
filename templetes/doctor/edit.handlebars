<h1>Edit{{doctor.username}}</h1>
<form action='/doctor/{{doctor._id}}?_method=PUT' method="post">
    <div>
        <label for="">username</label>

        <input type="text" class="form-control" name="username" value="{{doctor.username}}"/>
    </div>
    <div>
        <label for="">password</label>
        <input type="password" class="form-control" name="password" value="{{doctor.password}}"/>
    </div>
    <div>
        <label for="">department</label>

        <select name="department" id="" class="form-select">

            {{#each departments}}

            <option value="{{_id}}">{{name}}</option>


            {{/each}}
        </select>
    </div>
    <div>
        <button class="btn btn-success" type="submit">Edit subject</button>
    </div>
</form>
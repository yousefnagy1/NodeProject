<h1>Edit{{student.username}}</h1>
<form action='/student/{{student._id}}?_method=PUT' method="post">
    <div>
        <label for="">username</label>

        <input type="text" class="form-control" name="username" value="{{student.username}}"/>
    </div>
    <div>
        <label for="">password</label>
        <input type="password" class="form-control" name="password" value="{{student.password}}"/>
    </div>
    <div>
        <label for="">department</label>

        <select name="department" id="" class="form-select">

            {{#each departments}}

            <option value="{{_id}}">{{name}}</option>


            {{/each}}
        </select>
    </div>
    <div>
        <label for="">accademicNumber</label>
        <input type="text" class="form-control" name="accademicNumber" value="{{student.accademicNumber}}">
    </div>
    <div>
        <button class="btn btn-success" type="submit">Edit student</button>
    </div>
</form>